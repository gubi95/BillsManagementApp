<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_bills">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="@color/colorPrimaryDark">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:hint="@string/shop_name"
            android:textColor="@color/backgroundWhite"
            android:textColorHint="@color/backgroundWhite"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/addNewProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_add_new_product_white" />

            <ImageButton
                android:id="@+id/acceptAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/colorPrimaryDark"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                app:srcCompat="@drawable/ic_accept_white" />

            <ImageButton
                android:id="@+id/takePhotoAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_take_photo_white" />

        </LinearLayout>

    </RelativeLayout>


    <ListView
        android:id="@+id/productList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>